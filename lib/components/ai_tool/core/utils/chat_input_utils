import 'package:flutter/material.dart';


void handleSend(
  TextEditingController controller,
  VoidCallback onSend,
  ValueNotifier<bool> isTextEmptyNotifier,
) {

  // call the 'onSend' callback
  onSend();

  // clear the input field
  controller.clear();

  // notify the notifier about the change
  isTextEmptyNotifier.value = true;

} // end 'handleSend' method